name: Backend CI/CD with SCP (Testing with PEM file)

on:
  push:
    branches: ["master"]
  workflow_dispatch:

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    env:
      IMAGE_NAME: coffeespace-backend
      APP_DIR: /home/ubuntu/app
      EC2_USER: ubuntu
      EC2_HOST: 13.201.227.228

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Build backend Docker image
        run: docker build -t ${{ env.IMAGE_NAME }}:latest -f Dockerfile .

      - name: Save image to TAR
        run: docker save ${{ env.IMAGE_NAME }}:latest -o backend.tar

      - name: Fix file permissions
        run: chmod 644 backend.tar docker-compose.yml deploy.sh

      - name: Fix PEM permissions
        run: chmod 600 ./coffeespace.pem

      - name: Copy artifacts to EC2
        uses: appleboy/scp-action@v0.1.7
        with:
          host: ${{ env.EC2_HOST }}
          username: ${{ env.EC2_USER }}
          key_path: "./coffeespace.pem"   # <- use the pem file committed in repo root
          source: "backend.tar,docker-compose.yml,deploy.sh"
          target: ${{ env.APP_DIR }}

      - name: Deploy on EC2
        uses: appleboy/ssh-action@v1.2.0
        with:
          host: ${{ env.EC2_HOST }}
          username: ${{ env.EC2_USER }}
          key_path: "./coffeespace.pem"   # <- use the same pem file
          script: |
            set -e
            APP_DIR="${{ env.APP_DIR }}"
            mkdir -p "$APP_DIR"
            cd "$APP_DIR"

            if ! command -v docker >/dev/null 2>&1; then
              sudo apt-get update -y
              sudo apt-get install -y docker.io
            fi

            if ! docker compose version >/dev/null 2>&1; then
              sudo apt-get install -y docker-compose-plugin || sudo apt-get install -y docker-compose
            fi

            # Load image from TAR
            docker load -i backend.tar

            # Run docker-compose deploy script
            chmod +x deploy.sh
            ./deploy.sh